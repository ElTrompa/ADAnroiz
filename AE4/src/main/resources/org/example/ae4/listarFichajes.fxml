<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="15" style="-fx-background-color: #f5f5f5; -fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.ae4.ListarFichajesController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label style="-fx-text-fill: #2c3e50; -fx-font-size: 20;" text="Listar Fichajes">
        <font>
            <Font name="System Bold" size="20" />
        </font>
    </Label>

    <Separator style="-fx-border-color: #bdc3c7;" />

    <VBox spacing="10">
        <Label style="-fx-text-fill: #34495e; -fx-font-size: 14;" text="Filtros de Busqueda">
            <font>
                <Font name="System Bold" size="14" />
            </font>
        </Label>

        <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-padding: 10;">
            <VBox spacing="5" style="-fx-border-color: #ecf0f1; -fx-border-radius: 4; -fx-padding: 8;">
                <Label text="Fecha Desde:" style="-fx-text-fill: #34495e; -fx-font-size: 11;">
                    <font><Font size="12" /></font>
                </Label>
                <DatePicker fx:id="fechaDesdeDataPicker" style="-fx-font-size: 11; -fx-padding: 6;" prefWidth="150" />
            </VBox>

            <VBox spacing="5" style="-fx-border-color: #ecf0f1; -fx-border-radius: 4; -fx-padding: 8;">
                <Label text="Fecha Hasta:" style="-fx-text-fill: #34495e; -fx-font-size: 11;">
                    <font><Font size="12" /></font>
                </Label>
                <DatePicker fx:id="fechaHastaDataPicker" style="-fx-font-size: 11; -fx-padding: 6;" prefWidth="150" />
            </VBox>

            <VBox spacing="5" style="-fx-border-color: #ecf0f1; -fx-border-radius: 4; -fx-padding: 8;">
                <Label text="Trabajador:" style="-fx-text-fill: #34495e; -fx-font-size: 11;">
                    <font><Font size="12" /></font>
                </Label>
                <ComboBox fx:id="trabajadorComboBox" style="-fx-font-size: 11; -fx-padding: 6;" prefWidth="200" />
            </VBox>

            <VBox spacing="5">
                <Label text=" " style="-fx-font-size: 11;">
                    <font><Font size="12" /></font>
                </Label>
                <HBox spacing="10">
                </HBox>
            </VBox>
         <Button fx:id="buscarButton" text="Buscar" style="-fx-font-size: 12; -fx-padding: 8 15; -fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 4; -fx-cursor: hand;" />
         <Button fx:id="limpiarButton" text="Limpiar" style="-fx-font-size: 12; -fx-padding: 8 15; -fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 4; -fx-cursor: hand;" />
        </HBox>
    </VBox>

    <Separator style="-fx-border-color: #bdc3c7;" />

    <TableView fx:id="tableFichajes" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 10;" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="fechaTableColum" prefWidth="100" text="Fecha" />
            <TableColumn fx:id="nombreTableColum" prefWidth="180" text="Trabajador" />
            <TableColumn fx:id="entradaTableColum" prefWidth="110" text="Entrada" />
            <TableColumn fx:id="salidaTableColum" prefWidth="110" text="Salida" />
            <TableColumn fx:id="climaTableColum" prefWidth="120" text="Clima" />
            <TableColumn fx:id="temperaturaTableColum" prefWidth="100" text="Temperatura" />
            <TableColumn fx:id="horasJornadaTableColum" prefWidth="100" text="Horas Jornada" />
        </columns>
    </TableView>

    <HBox spacing="30" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 4;">
        <Label fx:id="totalRegistrosLabel" style="-fx-text-fill: #2c3e50; -fx-font-size: 12;" text="Total de registros: 0">
            <font>
                <Font name="System Bold" size="13" />
            </font>
        </Label>
        <Label fx:id="totalHorasLabel" style="-fx-text-fill: #27ae60; -fx-font-size: 12;" text="Total horas trabajadas: 00:00">
            <font>
                <Font name="System Bold" size="13" />
            </font>
        </Label>
    </HBox>
</VBox>
