<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #f5f5f5;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="org.example.fichajes.MainMenuController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>

    <Label style="-fx-text-fill: #2c3e50;" text="Sistema de Control de Fichajes">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <Label style="-fx-text-fill: #7f8c8d;" text="Seleccione una opcion:">
        <font>
            <Font size="14.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" spacing="15.0">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>

        <Button fx:id="btnFichar" onAction="#onFicharClick" prefHeight="50" prefWidth="300" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" text="Fichar">
        </Button>

        <Button fx:id="btnGestion" onAction="#onGestionClick" prefHeight="50" prefWidth="300" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" text="Gestion de Fichajes">
        </Button>

        <Button fx:id="btnEstadisticas" onAction="#onEstadisticasClick" prefHeight="50" prefWidth="300" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" text="Estadisticas">
        </Button>

        <Button fx:id="btnSalir" onAction="#onSalirClick" prefHeight="50" prefWidth="300" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px; -fx-cursor: hand;" text="Salir">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
    </VBox>
</VBox>
